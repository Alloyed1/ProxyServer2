
@model ProxyServer2.ViewModels.AuthViewModel
@{
	ViewData["Title"] = "Auth";
}

<link rel="stylesheet" type="text/css" href="~/css/site.css">
<link rel="stylesheet" type="text/css" href="~/css/main.css">
<link rel="icon" type="image/png" href="~/favicon.ico" />
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.css">

<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
<!--===============================================================================================-->

<div class="container text-center d-flex">

	<div class="register mt-5 pb-5  text-center mx-auto justify-content-center  pb-4">
		<form method="post" asp-controller="Account" asp-action="Auth">
			<span class="login100-form-title p-b-55 pb-4">
				АВТОРИЗАЦИЯ
			</span>
			<div asp-validation-summary="ModelOnly" class="text-warning  pb-3 ml-2"></div>
			<div class="wrap-input100 validate-input m-b-16" data-validate="Valid email is required: ex@abc.xyz">
				<input asp-for="Bitcoin" class="input100" type="text" name="email" placeholder="Ваш ключ">
				<span class="focus-input100"></span>
				<span class="symbol-input100">
					<span class="lnr lnr-user"></span>
				</span>
			</div>
			<div class="contact100-form-checkbox m-l-4 mt-4 d-flex">
				<input asp-for="RememberMe" class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
				<label class="label-checkbox100" for="ckb1">
					Запомнить меня
				</label>
			</div>

			<div class="container-login100-form-btn p-t-25 mt-4">
				<button class="login100-form-btn">
					ВОЙТИ
				</button>
			</div>
		</form>
	</div>

</div>
@section Scripts{
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
	<!--===============================================================================================-->
	<!--===============================================================================================-->
	<script src="~/vendor/select2/select2.min.js"></script>
	<!--===============================================================================================-->
	<script src="~/js/main.js"></script>

}

